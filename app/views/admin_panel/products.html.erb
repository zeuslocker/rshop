<div class="row">
  <div class="col-sm-4">
  <%= render '/admin_panel/vmenu' %>
  </div>
  <div class="col-sm-8">
    <table class='table table-condensed'>
      <thead>
        <tr>
          <td>Category</td>
          <td>Title</td>
            <td>Price</td>
            <td>Show</td>
              <td>Edit</td>
                <td>Delete</td>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |f| %>
        <tr>
          <td>
            <%= f.category.title %>
          </td>
          <td>
            <%= f.title %>
          </td>
          <td>
            <%= f.price %>
          </td>
          <td>
            <%= link_to 'show', product_path(f) %>
          </td>
          <td>
            <%= link_to 'edit', edit_product_path(f) %>
          </td>
          <td>
            <%= link_to 'delete', f, method: :delete %>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
