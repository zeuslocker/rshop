<%= stylesheet_link_tag params[:controller] %>
    <link href="carousel.css" rel="stylesheet">
<%= stylesheet_link_tag    'carousel.css', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'carousel.js', 'data-turbolinks-track': 'reload'%>
      <%= render 'main_slider' %>

    <% Product.all.each_with_index do |product, i| %>
        <%if (i%4 == 0) %>
             <div class="row">
         <%end%>
            <div class="col-sm-3 product-box">
                <%= link_to product do %>
                    <%= image_tag product.images.first.link, class: 'product_images_links' %><br>
                    <%= "#{product.title}" %>
                <%end%><br>
                <%= link_to cart_add_path(product), class: 'link-pos' do %>
                    <button type="button" class="btn btn-success add-cart-btn" style="text-decoration: none"><%= image_tag 'Add_to_Cart-512.png', class: 'cart-ico'%>
                    </button>
                    <%end%>
                     <span class="price" ><%= " $#{product.price}" %></span>
            </div>
            <%if (i%4 == 3) %>
                </div>
        <% end %>
    <% end %>


<br>
<br>
