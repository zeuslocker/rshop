<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<%= stylesheet_link_tag params[:controller] %>
  <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
              <th style="width:50%">Товар</th>
              <th style="width:10%">Цена</th>
              <th style="width:8%">Количество</th>
              <th style="width:22%" class="text-center">Итог</th>
              <th style="width:10%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
             <% total = 0 %>
             <% if @cart.empty? %>
               <td data-th="Product">
                <div class="row">
                  <div class="col-sm-5 hidden-xs" style="margin-top: 10px">
                    <p>Корзина пуста</p>
                  </div>
                  </div>
                  <td>
             <%end%>
<% @cart.each do |id, quantity| %>
<% product = Product.find_by_id(id) %>
              <td data-th="Product">
                <div class="row">
                  <%= link_to product_path(product) do %>
                    <div class="col-sm-2 hidden-xs">
                    <%= image_tag product.images.first.link, class: 'img-responsive' %>
                    </div>
                    <div class="col-sm-10">
                      <h4 class="nomargin"><%= product.title %></h4>
                    </div>
                  <%end%>
                </div>
              </td>
              <td data-th="Price">$<%= product.price %></td>
                <td data-th="Quantity">
                  <%= form_tag cart_update_path, method: :get, action: :update, id: "form#{id}" do %>
                  <%= hidden_field_tag :id, product.id, id: 'p_id' %>
                  <%= number_field_tag :quantity, quantity, in: 1..100, class: 'form-control text-center', id: id.to_s, onchange: 'changePrice(this.id, this.value)' %>
                  <%end%>
                </td>
                <td data-th="Subtotal" id=<%="sub#{id}"%> name=<%="#{product.price}"%> class="text-center">$<%= product.price * quantity %></td>
                <td class="actions">
                  <% total += product.price * quantity %>
                  <%= link_to '#' do%>
                  <%end%>
                <%= link_to cart_clear_path(id: product.id) do%>
                <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
                <%end%>
              </td>
            </tr>
            <%end%>
          </tbody>
          <tfoot>
            <tr class="visible-xs">
              <td class="text-center"><strong>Total $<%= "#{total}" %></strong></td>
            </tr>
            <tr>
              <td><%= link_to root_path, class: 'btn btn-warning' do%><i class="fa fa-angle-left"></i> Продолжить покупки<%end%></td>
              <td colspan="2" class="hidden-xs"></td>
              <td class="hidden-xs text-center"><strong>Итог $<span id="total-price"><%= "#{total}" %></span></strong></td>
              <td>
              <%= form_tag pay_order_path, method: :post do %>
                <%= submit_tag 'Оплатить', class: 'btn btn-success btn-block' %>
                <%end%>
                </td>
            </tr>
          </tfoot>
        </table>
